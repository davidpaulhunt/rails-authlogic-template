<h1>Signin</h1>

<%= form_for @user_session do |f| %>
  <%= render 'shared/errors', object: @user_session if @user_session.errors.present? %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit 'Signin' %>
  </div>

<% end %>

<p>Haven't signed up yet? You can signup <%= link_to 'here', signup_path %>.</p>
<p><%= link_to 'Forgot your password?', new_password_reset_path %></p>
